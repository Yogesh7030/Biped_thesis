<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="biped">

  <!-- ros2_control hardware interface configuration -->
  <ros2_control name="BipedSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="left_hip_roll_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="left_knee_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="left_ankle_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_hip_roll_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_knee_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_ankle_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <ros2_control>
        <param name="update_rate">100</param>
        <param name="config_file">/home/yogesh_rajesh/biped_ros2_ws/src/biped_description/config/biped_controllers.yaml</param>
      </ros2_control>
    </plugin>
  </gazebo>

  <!-- Torso Link -->
  <link name="torso_link">
    <visual>
      <geometry>
        <box size="0.15 0.3 0.15"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.3 0.13"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.054" iyy="0.083" izz="0.021" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <gazebo reference="torso_link">
    <sensor type="imu" name="imu_sensor">
      <always_on>true</always_on>
      <update_rate>100.0</update_rate>
      <imu>
        <topic>imu/data</topic>
        <gaussian_noise>0.01</gaussian_noise>
      </imu>
    </sensor>
  </gazebo>

  <!-- Left Hip Joint -->
  <joint name="left_hip_roll_joint" type="revolute">
    <parent link="torso_link"/>
    <child link ="left_hip_link"/>
    <origin xyz="0.0 0.13 -0.09" rpy="0 0 0"/> <!-- Proper joint position -->
    <axis xyz="1 0 0"/> <!-- Roll axis -->
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="2.0"/>
  </joint>

  <!-- Left Hip Transmission -->
  <transmission name="left_hip_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_hip_roll_joint">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_hip_motor">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>  

  <!-- Left Hip Link -->
  <link name="left_hip_link">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.22"/>
      </geometry>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.22"/>
      </geometry>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
      <inertia ixx="0.00299" iyy="0.00299" izz="0.00064" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Left Knee Joint -->
  <joint name="left_knee_joint" type="revolute">
    <parent link="left_hip_link"/>
    <child link="left_shin_link"/>
    <origin xyz="0 0 -0.2" rpy="0 0 0"/> <!-- placed at bottom of hip link -->
    <axis xyz="0 1 0"/> <!-- flexion/extension axis -->
    <limit lower="-1.57" upper="0" effort="10.0" velocity="2.0"/>
  </joint>

  <!-- Left Knee Transmission -->
  <transmission name="left_knee_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_knee_joint">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_knee_motor">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> 
  
  <!-- Left Shin Link-->
  <link name="left_shin_link">
    <visual>
      <geometry>
        <cylinder radius="0.025" length="0.28"/>
      </geometry>
      <origin xyz="0 0 -0.14" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.2"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.6"/>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <inertia ixx="0.00224" iyy="0.00224" izz="0.00048" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  
  <!-- Left ankle joint -->
  <joint name="left_ankle_joint" type="revolute">
    <parent link="left_shin_link"/>
    <child link="left_foot_link"/>
    <origin xyz="0 0 -0.28" rpy="0 0 0"/>
    <axis xyz="1 0 0"/><!-- Pitch axis -->
    <limit lower="-0.5" upper="0.5" effort="5.0" velocity="1.0"/>
  </joint>

  <!-- Left ankle Transmission -->
  <transmission name="left_ankle_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_ankle_joint">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_ankle_motor">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> 

  <!-- Force/Torue Sensor -->
  <gazebo reference="left_ankle_joint">
    <sensor type="force_torque" name="left_ankle_ft">
      <always_on>true</always_on>
      <update_rate>100.0</update_rate>
      <force_torque>
        <frame>child</frame>
        <measure_direction>parent_to_child</measure_direction>
      </force_torque>
    </sensor>
  </gazebo>

  <!-- Left Foot Link -->
  <link name="left_foot_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/><!-- Rounded toe shape -->
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0004" iyy="0.0004" izz="0.0004" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Right Hip Joint -->
  <joint name="right_hip_roll_joint" type="revolute">
    <parent link="torso_link"/>
    <child link ="right_hip_link"/>
    <origin xyz="0.0 -0.13 -0.09" rpy="0 0 0"/> <!-- Proper joint position -->
    <axis xyz="1 0 0"/> <!-- Roll axis -->
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="2.0"/>
  </joint>

  <!-- Right Hip Transmission -->
  <transmission name="right_hip_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_hip_roll_joint">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_hip_motor">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> 

  <!-- Right Hip Link -->
  <link name="right_hip_link">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.22"/>
      </geometry>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.22"/>
      </geometry>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
      <inertia ixx="0.00299" iyy="0.00299" izz="0.00064" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Right Knee Joint -->
  <joint name="right_knee_joint" type="revolute">
    <parent link="right_hip_link"/>
    <child link="right_shin_link"/>
    <origin xyz="0 0 -0.2" rpy="0 0 0"/> <!-- placed at bottom of hip link -->
    <axis xyz="0 1 0"/> <!-- flexion/extension axis -->
    <limit lower="-1.57" upper="0" effort="10.0" velocity="2.0"/>
  </joint>

  <!-- Right Knee Transmission -->
  <transmission name="right_knee_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_knee_joint">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_knee_motor">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> 
  
  <!-- Right Shin Link-->
  <link name="right_shin_link">
    <visual>
      <geometry>
        <cylinder radius="0.025" length="0.28"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.025" length="0.28"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.6"/>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <inertia ixx="0.00224" iyy="0.00224" izz="0.00048" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Right ankle joint -->
  <joint name="right_ankle_joint" type="revolute">
    <parent link="right_shin_link"/>
    <child link="right_foot_link"/>
    <origin xyz="0 0 -0.28" rpy="0 0 0"/>
    <axis xyz="1 0 0"/><!-- Pitch axis -->
    <limit lower="-0.5" upper="0.5" effort="5.0" velocity="1.0"/>
  </joint>

  <!-- Right ankle Transmission -->
  <transmission name="right_ankle_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_ankle_joint">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_ankle_motor">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- Force/Torue Sensor -->
  <gazebo reference="right_ankle_joint">
    <sensor type="force_torque" name="right_ankle_ft">
      <always_on>true</always_on>
      <update_rate>100.0</update_rate>
      <force_torque>
        <frame>child</frame>
        <measure_direction>parent_to_child</measure_direction>
      </force_torque>
    </sensor>
  </gazebo>

  <!-- Right Foot Link -->
  <link name="right_foot_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/><!-- Rounded toe shape -->
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.4"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0004" iyy="0.0004" izz="0.0004" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

</robot>
  
